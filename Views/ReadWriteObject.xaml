<UserControl
    x:Class="MultipleUserLoginForm.Views.ReadWriteObject"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultipleUserLoginForm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    MinWidth="500"
    MinHeight="300"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="AliceBlue"
    mc:Ignorable="d">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Margin="10 5">
        <TextBlock Text="{Binding Object.Name}" VerticalAlignment="Center"
            HorizontalAlignment="Center" FontSize="22" Margin="0 0 20 0"/>
             <Button HorizontalAlignment="Right" Command="{Binding NavigateLoginCommand}" >
            <materialDesign:PackIcon Kind="EmergencyExit" 
                          Height="25" Width="25"/>

        </Button>
        </Grid>
       
        <Grid>
        <TextBox
            TextWrapping="Wrap"
            AcceptsReturn="True"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="AliceBlue"
            Foreground="Black"
            IsReadOnly="{Binding IsReadonly}"
            Text="{Binding Text}" 
            Margin="10 5"/>
    </Grid>
    </DockPanel>
    
</UserControl>
